{
  "files": {
    "exclude": [
      "node_modules/**",
      "target/**",
      "build/**"
    ],
    "include": [
      "**/*.fsh"
    ]
  },
  "formatter": {
    "alignCarets": true,
    "enabled": true,
    "indentSize": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ruleDirectories": ["examples/gritql"],
    "rules": {
      "recommended": true
    }
  }
}