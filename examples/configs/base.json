{
  "$schema": "https://octofhir.github.io/maki-rs/schema/v1.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "duplicate-definition": "error",
        "required-fields": "error"
      },
      "style": {
        "naming-convention": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "lineWidth": 100,
    "alignCarets": true
  },
  "files": {
    "include": ["**/*.fsh"],
    "exclude": [
      "**/node_modules/**",
      "**/temp/**",
      "**/*.generated.fsh"
    ]
  }
}
